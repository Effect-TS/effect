{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "outDir": "build/esm",
    "target": "ES2018",
    "module": "ES6",
    "moduleResolution": "Node",
    "incremental": true,
    "tsBuildInfoFile": "tsbuildinfo/esm.tsbuildinfo",
    "declaration": false,
    "declarationMap": false,
    "removeComments": false
  },
  "include": ["src/**/*.ts"]
}
