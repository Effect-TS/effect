# NPM Configuration for effect-native fork

# Ensure @effect-native packages are public by default
@effect-native:registry=https://registry.npmjs.org/
access=public

# Package provenance for security
provenance=true

# Prevent accidental publication of private packages
# Packages must explicitly set "private": false or use --access public
publish-requires-access=true

# Engine strict mode
engine-strict=true

# Save exact versions in package.json
save-exact=false

# Use pnpm's lockfile
package-lock=false

# Note: To publish @effect-native packages:
# 1. Ensure you're logged in: npm login
# 2. Ensure you have access to @effect-native org
# 3. Use: pnpm publish --access public
#
# To claim the @effect-native namespace on npm:
# 1. Create organization at: https://www.npmjs.com/org/create
# 2. Name it "effect-native"
# 3. This secures the namespace from squatting